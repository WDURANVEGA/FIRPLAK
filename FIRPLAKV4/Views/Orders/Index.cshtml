@model List<FIRPLAKV4.Data.Entities.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container-fluid">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Ordenes</li>
        </ol>
    </nav>

    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <div class=" row">
                <h3 class="m-0 font-weight-bold text-primary col-md-11">Ordenes</h3>
                <div class=" col-md-1">
                                       
                    <a class="btn btn-primary btn-circle"
                        asp-action="Create"
                        data-toggle="tooltip" title="Nueva Orden">
                        <i class="fas fa-plus" style="color:#F8F9FC;cursor: pointer;"></i>
                    </a>

                </div>
            </div>
        </div>

        <div class="card-body">


            <div class="table-responsive mt-2">
                <table class="table table-bordered" id="myDataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="cursor: pointer;"> Id </th>
                            <th style="cursor: pointer;"> Cliente </th>
                            <th style="cursor: pointer;"> Responsable </th>
                            <th style="cursor: pointer;"> Estado </th>
                            <th style="cursor: pointer;"> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                <td> @Html.DisplayFor(modelItem => item.Customer) </td>
                                <td> @item.Responsible.FullName </td>

                                <td> 
                                    @item.OrderState.Name 
                                    @if(item.OrderState.Name == "Recibido")
                                    {
                                        <i class="fa-solid fa-circle-check text-success"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-info btn-circle"
                                       asp-action="Dispatch"
                                       asp-route-id="@item.Id">
                                        <i class="fa-solid fa-truck" style="color:#F8F9FC;cursor: pointer;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>

    </div>

</div>

